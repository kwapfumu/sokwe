{
  "extends": [
    "plugin:jsx-a11y/recommended",
    "airbnb",
    "plugin:react/recommended",
  ],
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": ["error", "always"],
    "indent": ["error", 2],
    "no-else-return": [ "error", { "allowElseIf": true }],
    "no-param-reassign": 0,
    "object-shorthand": ["error", "never"],
    "quotes": 0,
    "linebreak-style": ["error", "windows"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-no-bind": ["error", { "ignoreRefs": false, "allowArrowFunctions": false, "allowFunctions": false, "allowBind": true }],
    "react/no-did-mount-set-state": 0,
    "react/forbid-prop-types": ["error",{ "forbid": ["any"]} ]
  },
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "jest": true,
    "mongo": true,
    "node": true
    },
  "globals": {
    "React":true
  },
  "parser": "babel-eslint",
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true,
            "globalReturn": true
        }
    },
  "plugins": ["import", "react", "jsx-a11y"]
}
